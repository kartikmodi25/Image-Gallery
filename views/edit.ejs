<% layout('../layouts/boilerplate')%>
    <div class="container">
        <div class="row">
            <div class="bg-primary d-flex justify-content-center align-items-center">
                
                <div class="col-6">
                    <h1 class="text-center">Edit Profile</h1>
                    <form action="/edit/<%=userData._id%>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="title">Name</label>
                            <input class="form-control" type="text" id="title" name="userData[name]"
                                value="<%=userData.name %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Image URL</label>
                            <input class="form-control" type="text" id="title" name="userData[imageURL]"
                                value="<%=userData.imageURL %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Profile Type</label>
                            <input class="form-control" type="text" id="title" name="userData[profileType]"
                                value="<%=userData.profileType %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Bio</label>
                            <input class="form-control" type="text" id="title" name="userData[bio]"
                                value="<%=userData.bio %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Skill1</label>
                            <input class="form-control" type="text" id="title" name="userData[skill1]"
                                value="<%=userData.skill1 %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Skill2</label>
                            <input class="form-control" type="text" id="title" name="userData[skill2]"
                                value="<%=userData.skill2 %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Skill3</label>
                            <input class="form-control" type="text" id="title" name="userData[skill3]"
                                value="<%=userData.skill3 %>">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Update Profile</button>
                        </div>
                    </form>
                    <a href="/welcome/<%= userData._id%>">Back To Profile</a>
                </div>
            </div>

        </div>
    </div>