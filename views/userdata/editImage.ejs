<% layout('/layouts/boilerplate')%>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 profile-info">
            <form action="/welcome/<%=id%>/gallery/<%=imageId%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image">
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <button class="btn btn-success mt-3">Submit Image</button>
            </form>
        </div>
    </div>
</div>