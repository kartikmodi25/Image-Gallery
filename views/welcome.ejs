<% layout('../layouts/boilerplate')%>
<div class="container-fluid bg-dark d-flex justify-content-center align-items-center vh-100">
    <div class="row">
        <div class="col-md-6 bg-primary p-4">
            <h1 class="text-center mb-4">Welcome <%= dbUser.name %></h1>
            <div class="d-flex justify-content-center mb-4">
                <img src="<%= dbUser.imageURL %>" class="img-fluid" alt="...">
            </div>
            <div class="d-flex flex-column align-items-center bg-dark rounded border border-dark p-4 text-white">
                <h5 class="mb-3">
                    Profession: <%= dbUser.profileType %>
                </h5>
                <p class="mb-3">
                    Bio: <%= dbUser.bio %>
                </p>
                <p class="mb-3">
                    Skill1: <%= dbUser.skill1 %>
                </p>
                <p class="mb-3">
                    Skill2: <%= dbUser.skill2 %>
                </p>
                <a href="/welcome/<%= dbUser._id%>/gallery" class="mb-3">Image Gallery</a>
                <div class="d-flex">
                    <a href="/welcome/<%=dbUser._id%>/edit" class="btn btn-success me-3 mx-3">Edit Profile</a>
                    <a href="/" class="btn btn-secondary ">Log Out</a>
                </div>
            </div>
        </div>
    </div>
</div>
